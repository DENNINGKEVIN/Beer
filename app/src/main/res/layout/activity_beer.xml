<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeerActivity"
    android:background="@android:color/darker_gray"
    >

    <!--    <ImageView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:id="@+id/imageView"-->
    <!--        android:src="@drawable/beer4"-->
    <!--        android:scaleType="centerCrop" />-->
    <Button
        android:id="@+id/addBeerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add A New Beer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beerTextView"
        android:text="Here are the beers"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        app:fontFamily="monospace"
        android:textAlignment="center"
        android:layout_below="@id/addBeerButton"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/beerListView"
        android:layout_below="@+id/beerTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>